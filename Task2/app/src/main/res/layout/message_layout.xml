<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_picture_message"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/picture"/>

    <TextView
        android:id="@+id/tv_title_message"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="这是标题"
        android:layout_toEndOf="@id/img_picture_message"
        android:layout_toRightOf="@id/img_picture_message"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tv_description_message"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="16sp"
        android:textColor="#818181"
        android:text="这是描述"
        android:layout_toEndOf="@id/img_picture_message"
        android:layout_toRightOf="@id/img_picture_message"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tv_title_message"/>

    <TextView
        android:id="@+id/tv_time_message"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/img_picture_message"
        android:textSize="16sp"
        android:textColor="#818181"
        android:textAlignment="center"
        android:text="刚刚"/>

</RelativeLayout>